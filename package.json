{
  "name": "producto-api",
  "version": "1.0.0",
  "description": "expressJs backend to products",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
