  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byrond27/producto-api.git"
  },
  "author": "Byron Dominguez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byrond27/producto-api/issues"
  },
  "homepage": "https://github.com/byrond27/producto-api#readme",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.17.3",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "sass": "^1.26.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest": "^25.4.0",
    "supertest": "^4.0.2"
